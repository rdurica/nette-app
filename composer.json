{
	"name": "rdurica/nette-app",
	"description": "Nette application skeleton with packages and configuration",
	"keywords": ["nette"],
	"type": "project",
	"license": ["MIT"],
	"require": {
		"php": ">= 8.2",
		"rdurica/core": "dev-main",
		"tracy/tracy": "^2.9",
		"nepada/security-annotations": "^5.0",
		"contributte/translation": "^2.0"
	},
	"require-dev": {
		"nette/tester": "^2.4",
		"squizlabs/php_codesniffer": "^3.8",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app"
		}
	},
	"scripts": {
		"phpstan": "vendor/bin/phpstan analyse -l 9 app/",
		"phpcs": "phpcs --standard=PSR12 app/",
		"phpcbf": "phpcbf --standard=PSR12 app/",
		"post-create-project-cmd": [
			"php -r \"mkdir('temp/cache', 0777, true);\"",
			"php -r \"mkdir('log');\""
		]
	},
	"minimum-stability": "stable",
	"config": {
		"allow-plugins": {
			"symfony/thanks": true
		}
	}
}

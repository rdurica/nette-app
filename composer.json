{
	"name": "rdurica/nette-app",
	"description": "Nette application skeleton with packages and configuration",
	"keywords": ["nette"],
	"type": "project",
	"license": ["MIT"],
	"require": {
		"php": ">= 8.3",
		"rdurica/core": "dev-main",
		"rdurica/core_acl": "dev-main",
		"tracy/tracy": "^2.9",
		"contributte/translation": "^2.0",
		"nette/utils": "^4.0",
		"nette/robot-loader": "^4.0",
		"nette/forms": "^3.1",
		"nette/mail": "^4.0"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"nette/tester": "^2.4",
		"squizlabs/php_codesniffer": "^3.8",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app"
		}
	},
	"scripts": {
		"all-checks": [
			"@phpstan",
			"@phpcs"
		],
		"phpstan": "vendor/bin/phpstan analyse -l 8 app/",
		"phpcs": "phpcs --standard=phpcs.xml app/",
		"phpcbf": "phpcbf --standard=phpcs.xml app/",
		"post-create-project-cmd": [
			"php -r \"mkdir('temp/cache', 0777, true);\"",
			"php -r \"mkdir('log');\""
		]
	},
	"minimum-stability": "stable",
	"config": {
		"allow-plugins": {
			"symfony/thanks": true
		}
	}
}
